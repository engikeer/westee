<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
    <display-name>书城</display-name>

    <listener>
        <listener-class>com.mfun.listener.AppListener</listener-class>
    </listener>
    
    <filter>
        <filter-name>characterEncoding</filter-name>
        <filter-class>com.mfun.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>characterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>userLogin</servlet-name>
        <servlet-class>com.mfun.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLogin</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userLogon</servlet-name>
        <servlet-class>com.mfun.controller.LogonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLogon</servlet-name>
        <url-pattern>/user/logon</url-pattern>
    </servlet-mapping>

</web-app>
